# BevyFinder Server Environment Configuration
# Copy this file to .env and fill in your values

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/bevyfinder

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-at-least-32-characters-long-please-change-this
JWT_EXPIRE=7d

# Server Configuration
NODE_ENV=development
PORT=3000

# Security Configuration
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes in milliseconds
RATE_LIMIT_MAX_REQUESTS=100  # Max requests per window
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080,https://bevyfinder.com

# Email Configuration (for verification emails)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password
EMAIL_FROM=noreply@bevyfinder.com

# Cloud Storage (for image uploads)
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret

# Google Analytics (optional)
GA_TRACKING_ID=G-ZSY199PZC4

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=logs/app.log

# Session Configuration
SESSION_SECRET=another-super-secret-session-key-at-least-32-characters

# API Configuration
API_VERSION=v1
API_PREFIX=/api

# Security Headers
SECURITY_HEADERS_ENABLED=true
CSP_ENABLED=true
HSTS_ENABLED=true

# Backup Configuration
BACKUP_ENABLED=false
BACKUP_SCHEDULE=0 2 * * *  # Daily at 2 AM
BACKUP_RETENTION_DAYS=30 